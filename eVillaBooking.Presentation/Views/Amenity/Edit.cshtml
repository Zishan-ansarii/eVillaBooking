@model Amenity

<div class="row">
	<div class="w-100 card">

		<div class="text-danger" asp-validation-summary="ModelOnly"></div>
		<div class="card-header bg-success bg-gradient text-center border m-3">
			<div>Updata Amenity</div>
		</div>
		<div class="card-body">
			<form asp-controller="Amenity" asp-action="Edit" method="post">
				<div class="py-1">

					<input type="hidden" asp-for="Id" />
					<div class="form-floating">
						<select class="form-select" asp-for="VillaId" asp-items="@(ViewBag.SelectListItem)">
							<option disabled selected>Select Villa Name</option>
						</select>
						<label asp-for="VillaId">Villa ID</label>
						<span asp-validation-for="VillaId" class="text-danger"></span>

					</div>
				</div>

				<div class="py-1">
					<div class="form-floating">
						<input type="text" asp-for="Name" class="form-control" placeholder="" />
						<label asp-for="Name"></label>
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>
				</div>

				<div class="py-1">
					<div class="form-floating">
						<input type="text" asp-for="Description" class="form-control" placeholder="" />
						<label asp-for="Description"></label>
						<span asp-validation-for="Description" class="text-danger"></span>
					</div>
				</div>

				<div class="py-2 text-center">
					<input type="submit" value="Save" class="btn btn-success" />
					<a asp-controller="Amenity" asp-action="Index" class="btn btn-warning">Cancal</a>
				</div>

			</form>

		</div>
	</div>

</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
