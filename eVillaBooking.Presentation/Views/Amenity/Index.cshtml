@model IEnumerable<Amenity>

<div class="row">
	<div class="w-100 card">
		<div class="card-header bg-success bg-gradient text-center border m-3">
			<div>Amenity List</div>
		</div>
		<div class="card-body">
			<div class="text-end m-2">
				<a asp-controller="Amenity" asp-action="Create" class="btn btn-danger">
					<i class="bi bi-plus-circle-fill"></i> Add New Amenity
				</a>
			</div>
			<table class="table table-hover  table-striped table-bordered">
				<thead>
					<tr>
						<th>Amenity Name</th>
						<th>Description</th>
						<th>Villa Name</th>

					</tr>
				</thead>
				<tbody>
					@foreach (var amenity in Model)
					{
						<tr>
							<td>@amenity.Name</td>
							<td>@amenity.Description</td>
							<td>@amenity.Villa.Name</td>

							<td>
								<a class="btn btn-primary" asp-controller="Amenity" asp-action="Edit" asp-route-id="@amenity.Id">Edit</a>
								<a class="btn btn-danger" asp-controller="Amenity" asp-action="Delete" asp-route-id="@amenity.Id">Delete</a>
							</td>
						</tr>
					}

				</tbody>
			</table>
		</div>
	</div>

</div>