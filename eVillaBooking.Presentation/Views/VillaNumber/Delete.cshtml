@model VillaNumber
<div class="row">
	<div class="w-100 card">
		<div class="text-danger" asp-validation-summary="ModelOnly"></div>
		<div class="card-header bg-success bg-gradient text-center border m-3">
			<div>Delete Villa Number</div>
		</div>
		<div class="card-body">
			<form asp-controller="VillaNumber" asp-action="DeleteConfirm" method="post">
				<input type="hidden" name="id" asp-for="Villa_Number" />
				<div class="py-1">
					<div class="form-floating">
						<select disabled class="form-select" asp-for="Villa_Id" asp-items="@(ViewData["SelectListItem"] as IEnumerable<SelectListItem>)">
							<option selected >Select Villa Name</option>
						</select>
						<label asp-for="Villa_Id">Villa ID</label>
						<span asp-validation-for="Villa_Id" class="text-danger"></span>

					</div>
				</div>

				<div class="py-1">
					<div class="form-floating">
						<input disabled type="text" asp-for="Villa_Number" class="form-control" placeholder="" />
						<label asp-for="Villa_Number">Villa Number</label>
						<span asp-validation-for="Villa_Number" class="text-danger"></span>
					</div>
				</div>

				<div class="py-1">
					<div class="form-floating">
						<input disabled type="text" asp-for="SpecialDetails" class="form-control" placeholder="" />
						<label asp-for="SpecialDetails">Special Details</label>
						<span asp-validation-for="SpecialDetails" class="text-danger"></span>
					</div>
				</div>

				<div class="py-2 text-center">
					<input type="submit" value="Save" class="btn btn-success" />
					<a asp-controller="VillaNumber" asp-action="Index" class="btn btn-warning">Cancal</a>
				</div>

			</form>

		</div>
	</div>

</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
