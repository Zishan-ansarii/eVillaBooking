@model eVillaBooking.Domain.Entities.Villa
<div class="row">
	<div class="w-100 card">
		<div class="card-header bg-success bg-gradient text-center border m-3">
			<div>Delete Villa From List</div>
		</div>
		<div class="card-body">
			<form asp-controller="Villa" asp-action="DeleteConfirm" method="post">
				<input type="hidden" asp-for="Id" />
				<input type="hidden" asp-for="ImageUrl" />

				<div class="row">
					<div class="col-md-8 col-sm-12 col-xxl-6">
						<div class="py-1">
							<div class="form-floating">
								<input disabled type="text" asp-for="Name" class="form-control" placeholder="" />
								<label asp-for="Name"></label>
								<span asp-validation-for="Name" class="text-danger"></span>
							</div>
						</div>

						<div class="py-1">
							<div class="form-floating">
								<input disabled type="text" asp-for="Description" class="form-control" placeholder="" />
								<label asp-for="Description"></label>
								<span asp-validation-for="Description" class="text-danger"></span>
							</div>
						</div>

						<div class="py-1">
							<div class="form-floating">
								<input disabled type="text" asp-for="Price" class="form-control" placeholder="" />
								<label asp-for="Price"></label>
								<span asp-validation-for="Price" class="text-danger"></span>
							</div>
						</div>

						<div class="py-1">
							<div class="form-floating">
								<input disabled type="text" asp-for="Occupancy" class="form-control" placeholder="" />
								<label asp-for="Occupancy"></label>
								<span asp-validation-for="Occupancy" class="text-danger"></span>
							</div>
						</div>

						<div class="py-1">
							<div class="form-floating">
								<input disabled type="text" asp-for="Sqft" class="form-control" placeholder="" />
								<label asp-for="Sqft"></label>
								<span asp-validation-for="Sqft" class="text-danger"></span>
							</div>
						</div>

						<div class="py-2 text-center">
							<input type="submit" value="Delete" class="btn btn-danger" />
							<a asp-controller="Villa" asp-action="Index" class="btn btn-warning">Cancal</a>
						</div>
					</div>

					<div class="col-md-4 col-sm-12 col-xxl-6">
						<img src="@Model.ImageUrl" class="img-fluid" alt="image not found" />
					</div>
				</div>

			</form>

		</div>
	</div>

</div>
